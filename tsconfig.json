{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declarationMap": true,
    "declaration": true
  }
}
